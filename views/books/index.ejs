<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= searchOptions.title %>" />
  </div>
  <div>
    <label for="publishedAfter">Publish After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter %>"
    />
  </div>
  <div>
    <label for="publishedBefore">Publish Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </div>

  <button type="submit">Search</button>
</form>
<div>
  <% books.forEach(book =>{ %>
  <img
    src="<%= book.coverImagePath %> "
    alt="book cover"
    height="150"
    width="100"
  />
  <% }) %>
</div>
